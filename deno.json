{
  "tasks": {
    "start-api": "deno run -A --watch server/api/main.ts",
    "start-scraper": "deno run -A --watch server/scraper/main.ts",
    "dev-api": "deno run --watch --allow-net server/api/mod.ts",
    "dev-scraper": "deno run --watch --allow-net server/scraper/mod.ts",
    "test-api": "deno test server/api",
    "test-scraper": "deno test server/scraper",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": [
      "server/"
    ]
  },
  "lint": {
    "include": [
      "server/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "compilerOptions": {
    "strict": true
  }
}
